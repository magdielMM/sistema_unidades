@model sistema_unidades.Models.Tipo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tipo1" class="control-label"></label>
                <input asp-for="Tipo1" class="form-control" />
                <span asp-validation-for="Tipo1" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" /> | <a asp-action="Index" class="btn btn-dark">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
